{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ts-node-dev",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "args": [
        "--inspect",
        "--watch",
        "${workspaceFolder}/src/**/*.ts,${workspaceFolder}/config.json",
        "--",
        "${workspaceFolder}/src/index.ts"
      ],
      "restart": true
    }
  ]
}
