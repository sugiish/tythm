{
  "clearMocks": true,
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "moduleNameMapper": {
    "^src/(.+)$": "<rootDir>/src/$1"
  },
  "preset": "ts-jest",
  "roots": ["<rootDir>"],
  "testMatch": [
    "**/tests/**/*.[jt]s?(x)",
    "**/?(*.)+(spec|test).[tj]s?(x)"
  ],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "verbose": true
}
